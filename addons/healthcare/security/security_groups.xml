<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- MCH User Group -->
    <record id="group_mch_user" model="res.groups">
        <field name="name">MCH User</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- MCH Manager Group -->
    <record id="group_mch_manager" model="res.groups">
        <field name="name">MCH Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_mch_user'))]"/>
    </record>

    <!-- MCH Provider Group -->
    <record id="group_mch_provider" model="res.groups">
        <field name="name">MCH Healthcare Provider</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_mch_user'))]"/>
    </record>
</odoo>