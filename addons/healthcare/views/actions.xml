<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="mch_dashboard_action" model="ir.actions.act_window">
        <field name="name">MCH Dashboard</field>
        <field name="res_model">mch.consultation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'search_default_today': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to Maternal and Child Health Dashboard
            </p>
        </field>
    </record>

    <!-- Calendar View for Scheduling -->
    <record id="mch_consultation_calendar_action" model="ir.actions.act_window">
        <field name="name">Schedule Consultation</field>
        <field name="res_model">mch.consultation</field>
        <field name="view_mode">calendar,form</field>
        <field name="context">{
            'default_state': 'draft',
            'default_provider_id': uid
        }</field>
    </record>

    <record id="mch_consultation_calendar_action" model="ir.actions.act_window">
    <field name="name">Consultation Calendar</field>
    <field name="res_model">mch.consultation</field>
    <field name="view_mode">calendar</field>
    <field name="view_id" ref="mch_consultation_calendar_view"/>
    <field name="target">current</field>
</record>

<!-- Also create the calendar view if it doesn't exist -->
<record id="mch_consultation_calendar_view" model="ir.ui.view">
    <field name="name">mch.consultation.calendar</field>
    <field name="model">mch.consultation</field>
    <field name="arch" type="xml">
        <calendar string="Consultations" date_start="date" color="provider_id">
            <field name="patient_id"/>
            <field name="provider_id"/>
        </calendar>
    </field>
</record>

</odoo>