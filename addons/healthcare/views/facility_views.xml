<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="mch_facility_action" model="ir.actions.act_window">
        <field name="name">Healthcare Facilities</field>
        <field name="res_model">mch.facility</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- Tree View -->
    <record id="mch_facility_tree_view" model="ir.ui.view">
        <field name="name">mch.facility.tree</field>
        <field name="model">mch.facility</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="facility_type"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="mch_facility_form_view" model="ir.ui.view">
        <field name="name">mch.facility.form</field>
        <field name="model">mch.facility</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="facility_type"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Address">
                            <field name="address" placeholder="Full address including street, city, state and country"/>
                        </page>
                        
                        <page string="Providers">
                            <field name="provider_ids">
                                <kanban>
                                    <field name="name"/>
                                    <field name="provider_type"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="oe_kanban_content">
                                                    <div class="oe_kanban_image">
                                                        <img t-att-src="kanban_image('mch.provider', 'image', record.id.raw_value)"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <strong><field name="name"/></strong>
                                                        <div>
                                                            <field name="provider_type"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <tree>
                                    <field name="name"/>
                                    <field name="provider_type"/>
                                    <field name="license_number"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="mch_facility_kanban_view" model="ir.ui.view">
        <field name="name">mch.facility.kanban</field>
        <field name="model">mch.facility</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div>
                                        <field name="facility_type"/>
                                    </div>
                                    <div>
                                        <field name="phone"/>
                                    </div>
                                    <div>
                                        <field name="email"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
