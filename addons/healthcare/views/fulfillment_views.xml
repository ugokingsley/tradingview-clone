<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mch_fulfillment_action" model="ir.actions.act_window">
        <field name="name">Fulfillments</field>
        <field name="res_model">mch.fulfillment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first fulfillment record
            </p>
        </field>
    </record>

    <record id="mch_fulfillment_tree_view" model="ir.ui.view">
        <field name="name">mch.fulfillment.tree</field>
        <field name="model">mch.fulfillment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="prescription_line_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="date_fulfilled"/>
                <field name="fulfilled_by"/>
                <field name="facility_id"/>
                <field name="state" widget="statusbar"/>
            </tree>
        </field>
    </record>

    <record id="mch_fulfillment_form_view" model="ir.ui.view">
        <field name="name">mch.fulfillment.form</field>
        <field name="model">mch.fulfillment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_fulfillment" string="Confirm" type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel_fulfillment" string="Cancel" type="object" class="btn-secondary"
                            invisible="state not in ['done', 'canceled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,canceled"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="prescription_line_id" 
                                   options="{'no_create': True, 'no_open': True}" />
                            <field name="patient_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="quantity" required="1"/>
                            <field name="date_fulfilled"/>
                            <field name="fulfilled_by" required="1"/>
                            <field name="facility_id" required="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="lot_id" 
                                   placeholder="Select batch/lot..."/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="notes" placeholder="Add any additional notes here..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="mch_fulfillment_search_view" model="ir.ui.view">
        <field name="name">mch.fulfillment.search</field>
        <field name="model">mch.fulfillment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Reference"/>
                <field name="patient_id" string="Patient"/>
                <field name="prescription_line_id" string="Prescription Line"/>
                <field name="product_id" string="Product"/>
                <field name="fulfilled_by" string="Provider"/>
                <field name="facility_id" string="Facility"/>
                <field name="state" string="Status"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Completed" name="done" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Facility" name="group_by_facility" context="{'group_by': 'facility_id'}"/>
                    <filter string="Provider" name="group_by_provider" context="{'group_by': 'fulfilled_by'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>