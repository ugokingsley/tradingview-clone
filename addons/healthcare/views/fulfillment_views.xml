<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mch_fulfillment_action" model="ir.actions.act_window">
        <field name="name">Fulfillments</field>
        <field name="res_model">mch.fulfillment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="mch_fulfillment_tree_view" model="ir.ui.view">
        <field name="name">mch.fulfillment.tree</field>
        <field name="model">mch.fulfillment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="date_fulfilled"/>
                <field name="fulfilled_by"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="mch_fulfillment_form_view" model="ir.ui.view">
        <field name="name">mch.fulfillment.form</field>
        <field name="model">mch.fulfillment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_fulfillment" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel_fulfillment" string="Cancel" type="object" class="btn-secondary" invisible="state in ('done', 'canceled')"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="prescription_line_id"/>
                            <field name="patient_id"/>
                            <field name="product_id"/>
                            <field name="is_vaccine"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="date_fulfilled"/>
                            <field name="fulfilled_by"/>
                            <field name="facility_id"/>
                        </group>
                    </group>

                    <group>
                        <field name="lot_id" required="is_vaccine == True"/>
                    </group>

                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
