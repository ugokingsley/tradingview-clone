<odoo>
    <record id="view_mch_vaccination_campaign_tree" model="ir.ui.view">
        <field name="name">mch.vaccination.campaign.tree</field>
        <field name="model">mch.vaccination.campaign</field>
        <field name="arch" type="xml">
            <tree string="Vaccination Campaigns">
                <field name="name"/>
                <field name="vaccine_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="target_population"/>
                <field name="vaccinated_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_mch_vaccination_campaign_form" model="ir.ui.view">
        <field name="name">mch.vaccination.campaign.form</field>
        <field name="model">mch.vaccination.campaign</field>
        <field name="arch" type="xml">
            <form string="Vaccination Campaign">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="vaccine_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="target_population"/>
                        </group>
                        <group>
                            <field name="state" widget="statusbar" statusbar_visible="draft,ongoing,completed,cancelled"/>
                            <field name="vaccinated_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Facilities &amp; Providers">
                            <group>
                                <field name="facility_ids" widget="many2many_tags"/>
                                <field name="provider_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Fulfillments">
                            <field name="fulfillment_ids">
                                <tree editable="bottom">
                                    <field name="patient_id"/>
                                    <field name="provider_id"/>
                                    <field name="facility_id"/>
                                    <field name="date_administered"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_start" type="object" string="Start"
                            invisible="state != 'draft'" class="btn-primary"/>

                    <button name="action_complete" type="object" string="Mark Completed"
                            invisible="state != 'ongoing'" class="btn-success"/>

                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state not in ['draft', 'ongoing']" class="btn-secondary"/>

                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_mch_vaccination_campaign_kanban" model="ir.ui.view">
        <field name="name">mch.vaccination.campaign.kanban</field>
        <field name="model">mch.vaccination.campaign</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <strong><field name="name"/></strong>
                            <div><span>Vaccine:</span> <field name="vaccine_id"/></div>
                            <div><span>Dates:</span> <field name="start_date"/> - <field name="end_date"/></div>
                            <div><span>Target:</span> <field name="target_population"/></div>
                            <div><span>Vaccinated:</span> <field name="vaccinated_count"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_mch_vaccination_campaign_search" model="ir.ui.view">
        <field name="name">mch.vaccination.campaign.search</field>
        <field name="model">mch.vaccination.campaign</field>
        <field name="arch" type="xml">
            <search string="Search Campaigns">
                <field name="name"/>
                <field name="vaccine_id"/>
                <filter name="filter_ongoing" string="Ongoing" domain="[('state','=','ongoing')]"/>
                <filter name="filter_completed" string="Completed" domain="[('state','=','completed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Vaccine" name="group_vaccine" context="{'group_by': 'vaccine_id'}"/>
                    <filter string="Facility" name="group_facility" context="{'group_by': 'facility_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mch_vaccination_campaign" model="ir.actions.act_window">
        <field name="name">Vaccination Campaigns</field>
        <field name="res_model">mch.vaccination.campaign</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new vaccination campaign.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_mch_vaccination_campaign_root"
              name="Vaccination Campaigns"
              parent="mch_root"
              sequence="30"/>

    <menuitem id="menu_mch_vaccination_campaign"
              name="Manage Campaigns"
              parent="menu_mch_vaccination_campaign_root"
              action="action_mch_vaccination_campaign"
              sequence="10"/>
</odoo>
