<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Provider Action - NO KANBAN -->
    <record id="mch_provider_action" model="ir.actions.act_window">
        <field name="name">Healthcare Providers</field>
        <field name="res_model">mch.provider</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first healthcare provider
            </p>
        </field>
    </record>

    <!-- Provider Tree View -->
    <record id="mch_provider_tree_view" model="ir.ui.view">
        <field name="name">mch.provider.tree</field>
        <field name="model">mch.provider</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="provider_type"/>
                <field name="license_number"/>
                <field name="specialty"/>
                <field name="facility_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Provider Form View -->
    <record id="mch_provider_form_view" model="ir.ui.view">
        <field name="name">mch.provider.form</field>
        <field name="model">mch.provider</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="provider_type"/>
                            <field name="license_number"/>
                            <field name="specialty"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="facility_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Consultations">
                            <field name="consultation_ids" mode="tree">
                                <tree>
                                    <field name="name"/>
                                    <field name="patient_id"/>
                                    <field name="date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Facility Action - NO KANBAN -->
    <record id="mch_facility_action" model="ir.actions.act_window">
        <field name="name">Healthcare Facilities</field>
        <field name="res_model">mch.facility</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="mch_facility_tree_view" model="ir.ui.view">
        <field name="name">mch.facility.tree</field>
        <field name="model">mch.facility</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="facility_type"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="mch_facility_form_view" model="ir.ui.view">
        <field name="name">mch.facility.form</field>
        <field name="model">mch.facility</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="facility_type"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>
                    
                    <field name="address" placeholder="Full address including street, city, state and country"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>