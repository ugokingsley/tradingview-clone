        <field name="res_model">mch.vaccination</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>
    
    <record id="mch_vaccination_tree_view" model="ir.ui.view">
        <field name="name">mch.vaccination.tree</field>
        <field name="model">mch.vaccination</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="vaccine_id"/>
                <field name="date_administered"/>
                <field name="administered_by"/>
                <field name="facility_id"/>
                <field name="next_due_date"/>
            </tree>
        </field>
    </record>
    
